<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgLandscapeLayoutLandscape"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvTitleLayoutLandscape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/imgCopyLayoutLandscape"
            app:layout_constraintStart_toEndOf="@+id/imgLandscapeLayoutLandscape"
            app:layout_constraintTop_toTopOf="@+id/imgLandscapeLayoutLandscape" />

        <TextView
            android:id="@+id/tvDescriptionLayoutLandscape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgLandscapeLayoutLandscape"
            app:layout_constraintEnd_toStartOf="@+id/imgDeleteLayoutLandscape"
            app:layout_constraintStart_toEndOf="@+id/imgLandscapeLayoutLandscape"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleLayoutLandscape" />

        <ImageView
            android:id="@+id/imgDeleteLayoutLandscape"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/tvDescriptionLayoutLandscape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDescriptionLayoutLandscape"
            app:srcCompat="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/imgCopyLayoutLandscape"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitleLayoutLandscape"
            app:srcCompat="@drawable/ic_make_copy" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>